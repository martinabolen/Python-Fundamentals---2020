1.
a=int(input())
b=int(input())
c=int(input())
max_number=-99999

if a >max_number:
    max_number=a

if b > max_number:
    max_number=b

if c > max_number:
    max_number=c

print(max_number)

2.
n=float(input())

if n == 0:
    print('zero')
elif n > 0:
    if abs(n) < 1:
        print('small positive')
    elif abs(n) > 1000000:
        print('large positive')
    else:
        print('positive')
elif n < 0:
    if abs(n) < 1:
        print('small negative')
    elif abs(n) > 1000000:
        print('large negative')
    else:
        print(f'negative')
        
    

